<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:background="@drawable/rectangle_gradient_round_pink"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:background="@null"
                android:layout_toRightOf="@+id/ivmac"
                android:fontFamily="@string/font_family_light"
                android:hint="Search Your Item here"
                android:padding="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/ivSearch"
                android:textColor="@color/black" />


            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="@dimen/_17sdp"
                android:layout_alignParentRight="true"
                android:layout_height="@dimen/_17sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_25sdp"

                android:layout_marginRight="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/ivFavourite"
                app:srcCompat="@drawable/ic_speak" />

            <ImageView
                android:id="@+id/ivmac"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_search" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
       android:layout_below="@+id/cardView"
        android:layout_width="match_parent"
        android:id="@+id/tab"
        android:background="@color/blue"
        android:layout_height="@dimen/_40sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
            android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Fashion Store"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@string/font_family_black"
                android:textColor="@color/grey"
            android:layout_height="wrap_content" />


            <Button
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="23332"
                android:textColor="@color/greyNew"
                android:drawableLeft="@drawable/ic_user"
                android:drawableTint="@color/greyNew"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:drawablePadding="@dimen/_20sdp"
                android:background="@drawable/rectangle_gradient_round_pink"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <!--<com.google.android.material.tabs.TabLayout-->
